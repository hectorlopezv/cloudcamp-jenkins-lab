properties([parameters([text(defaultValue: '''[
// Docker Build and Push Stages variables
    appName: "hello-world-python",
// Docker Build Stage variables
    dockerFilepath: "_scm_docker/Dockerfile",
    context: "_scm_docker/",
// Repo clone checkout Stage variables
    branchName: "bootcamp",
    repoURL: "https://github.com/yaayala/cloudcamp-jenkins-lab",
// Docker Push Stage variables
    region: "us-east-1",
    registryURL: "851725481871.dkr.ecr.us-east-1.amazonaws.com",
    appVersion: "1.0.0-beta.3"
]''', description: 'My map of values', name: 'config')])])


node ('docker&&linux'){



    //Call checkout stage method
    checkoutFromRepo(parameters.config)
    //Call build stage method
    dockerBuild(parameters.config)
    //Call push stage method
    dockerPush(parameters.config)



} 